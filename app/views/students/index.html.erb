	<div class="row">
		<div class="col-sm-6 pull-right">
			<%= link_to ( new_student_path) do %>
				 <button class="btn btn-success circle pull-right"><i class="fa fa-plus fa-2x"></i></button>
			<% end %>
			
		</div>
		<div class="col-sm-6">
			<h3>Students List</h3>
		</div>
	</div>
	
	<hr>
	<div class="table-responsive">
		<table class="table table-hover">
		  <thead>
		  	<tr class="text-center">
		  		<th>#</th>
		  		<th>Name</th>
		  		<th>Email</th>
					<th>Phone</th>	  		
		  		<th>Date of Birth</th>
		  		<th>City</th>
		  		<th>Country</th>
		  		<th colspan="2">Actions</th>	  		
		  	</tr>
		  </thead>
		  <tbody>
		  	<% @students.each_with_index do |student, index| %>
		  	<tr>
		  		<td><%= index+1 %></td>
		  		<td><%= link_to student.name, student_path(student.id) %></td>
		  		<td><%= student.email %></td>
		  		<td><%= student.phone %></td>
		  		<td><%= student.dob %></td>
		  		<td><%= student.city %></td>
		  		<td><%= student.country %></td>
		  		<td><%= link_to "Edit", edit_student_path(student.id), class: "btn btn-primary btn-xs" %></td>
		  		<td><%= link_to "Delete", student_path(student.id), method: :delete, class: "btn btn-danger btn-xs" %></td>
		  	</tr>
		  	<% end %>
		  </tbody>
		</table>
	</div>